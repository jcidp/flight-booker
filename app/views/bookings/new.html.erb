<h1>New booking</h1>
<h2>Flight details</h2>
<ul>
    <li>From: <%= @flight.departure_airport.code %></li>
    <li>To: <%= @flight.arrival_airport.code %></li>
    <li>Date: <%= @flight.start.to_date %></li>
    <li>Time: <%= @flight.start_time %></li>
</ul>
<h2>Passengers</h2>
<%= form_with model: @booking do |f| %>
  <%= f.fields_for :passengers do |p| %>
    <div>
      <%= p.label :name %>
      <%= p.text_field :name %>
      <br>
      <%= p.label :email %>
      <%= p.email_field :email %>
      <br>
    </div>
    <br>
  <% end %>
  <%= f.submit "Book" %>
<% end %>